<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <com.yoake.clock.LeonClockView
            android:layout_gravity="center"
            android:layout_width="300dp"
            app:clock_background="@mipmap/bg"
            android:layout_height="match_parent"/>
    <com.yoake.clock.LeonClockView
            app:time_zero_text="12"
            app:time_three_text="3"
            app:time_six_text="6"
            app:main_tick_color="#ff0000"
            app:second_hand_color="#00ff00"
            app:time_nine_text="9"
            android:layout_width="200dp"
            app:clock_outline_color="#000000"
            android:layout_height="match_parent"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <com.yoake.clock.LeonClockView
                android:layout_width="100dp"
                app:clock_background="@mipmap/bg"
                android:layout_height="match_parent"/>
        <com.yoake.clock.LeonClockView
                app:clock_background="#aaaaaa"
                android:layout_marginStart="20dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
        <com.yoake.clock.LeonClockView
                android:layout_marginStart="20dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>